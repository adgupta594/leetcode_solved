class Solution {
    public boolean isAnagram(String s, String t) {
        if(s.length()!=t.length()){
            return false;
        }
        int[] letter = new int[26];
        for(int i = 0; i<26; i++){
            letter[i] = 0;
        }
        for(int i = 0; i< s.length(); i++){
            letter[s.charAt(i)-97]++;
            letter[t.charAt(i)-97]--;
        }
        for(int i = 0; i<26; i++){
            if(letter[i]!=0){
                return false;
            }
        }
        return true;
    }
}
